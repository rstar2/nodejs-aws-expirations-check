{
  "name": "test",
  "version": 2,
  "builds": [
     { "src": "func.js", "use": "@now/node" },
     { "src": "funcs/*.js", "use": "@now/node" },
     { "src": "api/func.js", "use": "@now/node" },
     { "src": "express/app.js", "use": "@now/node" },
     { "src": "**/*.html", "use": "@now/static" }
  ],
  "routes": [
    {
      "src": "/(js|css|img)/.*",
      "headers": { "cache-control": "max-age=31536000, immutable" }
    },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/" }
  ]
} 
